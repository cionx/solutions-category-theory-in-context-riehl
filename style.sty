\usepackage{customtex}
\input{hyphenations.tex}


% general layout options
\KOMAoptions{
	twoside       = semi,
	open          = any,
	DIV           = 8,
	fontsize      = 12pt,
	chapterprefix = true,
	numbers       = noenddot
}



% settings for numbering of sectioning commands
% and for their inclusion in the table of contents
\setcounter{secnumdepth}{3}
\setcounter{tocdepth}{2}


% printing of counters
\renewcommand{\thesection}{\arabic{chapter}.\arabic{section}}
\renewcommand{\thesubsection}{Exercise~\thesection.\roman{subsection}}
\renewcommand{\thesubsubsection}{(\roman{subsubsection})}
\renewcommand{\theeverything}{\thechapter.\Alph{everything}}


% configuration of commutative diagrams
\tikzcdset{
	diagrams = {
		sep = large
	}
}

% words
\newcommand{\spaces}[1]{#1\nobreakdash-spaces}

% categories
\newcommand{\genericcatname}{\mathsf}
\newcommand{\specificcatname}{\mathsf}
\newcommand{\cat}{\genericcatname}
% specific categories
\newcommand{\Fin}{\specificcatname{Fin}}
\newcommand{\Field}{\specificcatname{Field}}
\newcommand{\Group}{\specificcatname{Group}}
\newcommand{\Set}{\specificcatname{Set}}
% categories depending on some other object
\newcommand{\Base}{\specificcatname{B}}
\newcommand{\Vect}{\specificcatname{Vect}}

% functors
\DeclareMathOperator{\dom}{dom}
\DeclareMathOperator{\codom}{codom}

% constructions
\DeclareMathOperator{\Commutator}{C}
\DeclareMathOperator{\Conj}{Conj}
\DeclareMathOperator{\Gcenter}{Z}
\DeclareMathOperator{\Power}{P}

% spaces and such
\newcommand{\symm}{S}

% to ensure spacing around \id
\renewcommand{\id}{1}
\renewcommand{\Id}{1}

% subscripts
\newcommand{\iso}{\mathrm{iso}}
\newcommand{\epi}{\mathrm{epi}}
